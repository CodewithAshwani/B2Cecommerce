  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/user/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "User Inputs",
            "in": "body",
            "description": "User Details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/generateOtp": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Send Otp to email to activate account",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "descrition": "sent otp to email",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP sent to email successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/verifyOtp": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Verify otp to activate your account ",
        "parameters": [
          {
            "name": "email Verification",
            "in": "body",
            "descrition": "Verify otp through email to activate your Account ",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp verified successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "login user with Email and password ",
        "parameters": [
          {
            "name": "Login inputs",
            "in": "body",
            "description": "Login inputs ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/changePassword":{
        "post":{
          "tags":["Users"],
          "description":" change password using old password",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [{
            "name": "Password inputs",
            "in": "body",
            "description": "change password inputs ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/passwordInputs"
            }
          }],
          "responses":{
            "200":{
              "description":"password changed succesfully"
            },
            "400":{
              "description":"input is wrong"
            }
          }
        }
    },
    "/user/logout": {
      "post": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Logout user",
 
        "responses": {
          "200": {
            "description": "user logout  successfully"
          },
          "400": {
            "description": "Acess denied !! Invalid token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/product/createProduct": {
      "post": {
        "tags": [
          "product"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "create product",
        "parameters": [
        
          {
            "name": "create Prodcut",
            "in": "body",
            "description": "create product",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "product created successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/product/getAllProducts": {
      "get": {
        "summary": "Get all products",
        "tags": [
          "product"
        ],
        "description": "Retrieve a list of all products",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array"
            },
            "400": {
              "description": "Bad Request"
            }
          }
        }
      }
    },
    "/product/UpdateProduct": {
      "patch": {
        "tags": [
          "product"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Update product",
        "parameters": [
          
          {
            "name": "pid",
            "in": "body",
            "description": "product ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "UpdateProdcut",
            "in": "body",
            "description": "Update product",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "product updated successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/product/deleteProduct": {
      "delete": {
        "tags": [
          "product"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "delete  product",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "description": "User ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "pid",
            "in": "path",
            "description": "product ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "product deleted successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/cart/addTocart": {
      "post": {
        "tags": [
          "cart"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "add product to cart",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Product Ids",
            "in": "body",
            "description": "product ids",
            "required": true,
            "type": "array",
            "schema": {
              "$ref": "#/definitions/CartInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "products added in cart  successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/cart/showCart": {
      "get": {
        "summary": "Get Full cart",
        "tags": [
          "cart"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "description": "Retrieve cart",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "Description": "get cart from userid"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "400": {
              "description": "Bad Request"
            }
          }
        }
      }
    },
    "/orders/placeOrder": {
      "post": {
        "summary": "place order",
        "tags": [
          "Order"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "description": "place order",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "Description": "get cart from userid"
          },
          {
            "name": "place ",
            "in": "body",
            "type": "string",
            "schema": {
              "$ref": "#/definitions/OrderInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "order is created and remains in pending state "
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/orders/showOrder": {
      "get": {
        "summary": "place order",
        "tags": [
          "Order"
        ],  "security": [
          {
            "bearerAuth": []
          }
        ],
        "description": "place order",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "Description": "get cart from userid"
          }
        ],
        "responses": {
          "200": {
            "description": "order is created and remains in pending state "
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header"
      }
    }
  },
  "definitions": {
    "UserInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": [
            "Admin",
            "Consumer"
          ]
        },
        "phoneNumber": {
          "type": "string"
        }
      },
      "required": [
        "userName",
        "password",
        "role",
        "email",
        "phoneNumber"
      ]
    },
    "GenerateAndVerifyOtpViaEmail": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": [
        "email"
      ]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "TokenInput": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "passwordInputs":{
      "type":"object",
      "properties":{
        "oldPassword":{
          "type":"string"
        },
        "newPassword":{
          "type":"string"
        }
      }
    },
    "ProductInput": {
      "type": "object",
      "properties": {
        "Title": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Price": {
          "type": "Number"
        },
        "Availability": {
          "type": "Boolean"
        },
        "Category": {
          "$ref": "#/definitions/Category"
        }
      }
    },
    "Category": {
      "type": "string",
      "enum": [
        "Personal care",
        "Electronics",
        "Baby care",
        "Dairy",
        "tea-coffee",
        "food",
        "fruits"
      ]
    },
    "CartInput": {
      "type": "object",
      "properties": {
        "productId": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        }
      },
      "required": [
        "productId",
        "quantity"
      ]
    },
    "OrderInput": {
      "type": "object",
      "properties": {
        "Address": {
          "type": "string"
        }
      }
    }
  }
}