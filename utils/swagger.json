{
  "swagger": "2.0",
  "info": {
    "title": "E-Commerce",
    "description": "API endpoints for SkillUp",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3004"
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/user/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "User Inputs",
            "in": "body",
            "description": "User Details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/generateOtp": {
      "post": {
        "tags": ["Users"],
        "summary": "Send Otp to email to activate account",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "descrition": "sent otp to email",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP sent to email successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/verifyOtp": {
      "post": {
        "tags": ["Users"],
        "summary": "Verify otp to activate your account ",
        "parameters": [
          {
            "name": "email Verification",
            "in": "body",
            "descrition": "Verify otp through email to activate your Account ",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp verified successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },

    "/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "login user with Email and password ",
        "parameters": [
          {
            "name": "Login inputs",
            "in": "body",
            "description": "Login inputs ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login/token": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user with token",
        "parameters": [
          {
            "name": "Authorization",
            "in": "body",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TokenInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login using token successfully"
          },
          "400": {
            "description": "Acess denied !! Invalid token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "UserInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["Admin", "Consumer"]
        },
        "phoneNumber": {
          "type": "string"
        }
      },
      "required": ["userName", "password", "role", "email", "phoneNumber"]
    },

    "GenerateAndVerifyOtpViaEmail": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": ["email"]
    },

    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "TokenInput": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    }
  }
}
