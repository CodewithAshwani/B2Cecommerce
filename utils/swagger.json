{
  "swagger": "2.0",
  "info": {
    "title": "E-Commerce App ",
    "description": "API endpoints for Ecommerce",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://ecommerce-production-59b6.up.railway.app/"
    },
    {
      "url": "https://e-commerce-w51c.onrender.com/"
    },
    {
      "url": "http://localhost:3004"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/user/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "User Inputs",
            "in": "body",
            "description": "User Details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/generateOtp": {
      "post": {
        "tags": ["Users"],
        "summary": "Send Otp to email to activate account",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "descrition": "sent otp to email",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP sent to email successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/verifyOtp": {
      "post": {
        "tags": ["Users"],
        "summary": "Verify otp to activate your account ",
        "parameters": [
          {
            "name": "email Verification",
            "in": "body",
            "descrition": "Verify otp through email to activate your Account ",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp verified successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "login user with Email and password ",
        "parameters": [
          {
            "name": "Login inputs",
            "in": "body",
            "description": "Login inputs ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login/token": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user with token",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TokenInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login using token successfully"
          },
          "400": {
            "description": "Acess denied !! Invalid token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/logout": {
      "post": {
        "tags": ["Users"],
        "summary": "Logout user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Token for user logout",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TokenInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user logout  successfully"
          },
          "400": {
            "description": "Acess denied !! Invalid token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/product/{userid}/createProduct": {
      "post": {
        "tags": ["product"],
        "summary": "create product",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "description": "User ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "create Prodcut",
            "in": "body",
            "description": "create product",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "product created successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/product/getAllProducts": {
      "get": {
        "summary": "Get all products",
        "tags": ["product"],
        "description": "Retrieve a list of all products",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array"
            },
            "400": {
              "description": "Bad Request"
            }
          }
        }
      }
    },
    "/product/{userid}/UpdateProduct/{pid}": {
      "patch": {
        "tags": ["product"],
        "summary": "Update product",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "description": "User ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "pid",
            "in": "path",
            "description": "product ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "create Prodcut",
            "in": "body",
            "description": "create product",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "product updated successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },

    "/product/{userid}/deleteProduct/{pid}": {
      "delete": {
        "tags": ["product"],
        "summary": "delete  product",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "description": "User ID",
            "required": true,
            "type": "string"
          },
          {
            "name": "pid",
            "in": "path",
            "description": "product ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "product deleted successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "cart/{userid}/addProductToCart": {
      "post": {
        "tags": ["cart"],
        "summary": "add product to cart",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Product Ids",
            "in": "body",
            "description": "product ids",
            "required": true,
            "type": "array",
            "schema": {
              "$ref": "#/definitions/CartInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "products added in cart  successfully"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },

    "cart/{userid}/getCart": {
      "get": {
        "summary": "Get Full cart",
        "tags": ["cart"],
        "description": "Retrieve cart",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",

            "400": {
              "description": "Bad Request"
            }
          }
        }
      }
    },
    "orders/{userid}/placeOrder": {
      "post": {
        "summary": "place order",
        "tags": ["Order"],
        "description": "place order",
        "parameters": [
          {
            "name": "place ",
            "in": "body",
            "type": "string",
            "schema": {
              "$ref": "#/definitions/OrderInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "order is created and remains in pending state "
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "orders/{userid}/getOrder": {
      "post": {
        "summary": "place order",
        "tags": ["Order"],
        "description": "place order",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "order is created and remains in pending state "
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "definitions": {
    "UserInput": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["Admin", "Consumer"]
        },
        "phoneNumber": {
          "type": "string"
        }
      },
      "required": ["userName", "password", "role", "email", "phoneNumber"]
    },
    "GenerateAndVerifyOtpViaEmail": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "TokenInput": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "ProductInput": {
      "type": "object",
      "properties": {
        "Title": {
          "type": "string"
        },
        "Description": {
          "type": "string"
        },
        "Price": {
          "type": "Number"
        },
        "Availability": {
          "type": "Boolean"
        },
        "Category": {
          "$ref": "#/definitions/Category"
        }
      }
    },
    "Category": {
      "type": "string",
      "enum": [
        "Personal care",
        "Electronics",
        "Baby care",
        "Dairy",
        "tea-coffee",
        "food",
        "fruits"
      ]
    },
    "CartInput": {
      "type": "object",
      "properties": {
        "productId": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        }
      },
      "required": ["productId", "quantity"]
    },
    "OrderInput": {
      "type": "object",
      "properties": {
        "Address": {
          "type": "string"
        }
      }
    }
  }
}
